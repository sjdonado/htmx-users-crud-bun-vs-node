<div id='users-list-row-{{user.id}}' class='border flex py-2'>
  <form
    class='flex w-full'
    hx-patch='/users/{{user.id}}'
    hx-target='#users-list-row-{{user.id}}'
    hx-validate
  >
    <span class='w-1/4 px-4'>
      <input
        class='border border-blue-500 w-full'
        type='text'
        name='email'
        value='{{user.email}}'
        required
      />
    </span>
    <span class='w-1/6 px-4'>
      <input
        class='border border-blue-500 w-full'
        type='text'
        name='hash'
        value='{{user.hash}}'
        required
      />
    </span>
    <span class='w-1/6 px-4'>
      <input
        class='border border-blue-500 w-full'
        type='number'
        name='counter'
        value='{{user.counter}}'
        required
      />
    </span>
    <span class='w-1/3 px-4'>{{formatDatetime user.createdAt}}</span>

    <div class='w-1/6 flex space-x-4 px-4 py-2'>
      <button type='submit' class='text-blue-500 hover:text-blue-700 underline'>
        Save
      </button>
      <button
        class='text-blue-500 hover:text-blue-700 underline'
        hx-get='/users/views/edit/cancel/{{user.id}}'
        hx-target='#users-list-row-{{user.id}}'
      >
        Cancel
      </button>
    </div>
  </form>
</div>
